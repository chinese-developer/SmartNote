<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SmarterNoteTheme">
        <attr name="myApp_textColor_primary" format="color|reference" />
        <attr name="myApp_textColor_primaryVariant" format="color|reference" />
        <attr name="myApp_textColor_secondary" format="color|reference" />
        <attr name="myApp_textColor_SecondaryVariant" format="color|reference" />
        <attr name="myApp_textColor_tertiary" format="color|reference" />
        <attr name="myApp_textColor_quaternary" format="color|reference" />
        <attr name="myApp_backgroundColor_primary" format="color|reference" />
        <attr name="myApp_backgroundColor_secondary" format="color|reference" />
        <attr name="myApp_statusBarColor_primary" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="myTextView_style" format="reference" />
        <attr name="myTextView_openUrlOnClick" format="boolean" />
        <attr name="myTextView_copyOnClick" format="boolean" />
        <attr name="myTextView_rippleOnClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyEditText">
        <attr name="myEditText_style" format="reference" />
    </declare-styleable>

    <declare-styleable name="MyButton">
        <attr name="myButton_style" format="reference" />
        <attr name="myButton_openUrlOnClick" format="boolean" />
        <attr name="myButton_copyOnClick" format="boolean" />
        <attr name="myButton_rippleOnClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyImageView">
        <attr name="myImageView_style" format="reference" />
    </declare-styleable>

</resources>
