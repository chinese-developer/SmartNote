<resources>

    <style name="Widget" />

    <style name="Widget.ImageView" />

    <style name="Widget.Dialog" parent="Theme.Material3.Light.NoActionBar" />

    <style name="Widget.TextView" parent="Widget.AppCompat.TextView" />

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText" />

    <style name="Widget.Button" parent="Widget.AppCompat.Button" />

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <!-- Default ImageView styles -->
    <style name="Widget.ImageView.Default">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Default text styles -->
    <style name="TextAppearance.Default">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/myApp_textColor_primary</item>
    </style>

    <!-- Default TextView styles -->
    <style name="Widget.TextView.Default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Default</item>
    </style>

    <!-- Default EditText styles -->
    <style name="Widget.EditText.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Default</item>
    </style>

    <!-- Default Button styles -->
    <style name="Widget.Button.Default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Default</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Dialog.material3">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item> <!-- 点击外部对话框可消失 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 弹窗后背景发暗 -->
    </style>
</resources>